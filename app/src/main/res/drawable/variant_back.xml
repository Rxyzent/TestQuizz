<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/green" />
            <gradient
                android:startColor="@color/green11"
                android:centerColor="@color/green22"
                android:endColor="@color/green11"/>
            <corners android:radius="12dp" />

        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/orange6" />
            <gradient
                android:startColor="@color/yellow11"
                android:centerColor="@color/yellow22"
                android:endColor="@color/yellow11"/>

            <corners android:radius="12dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/orange6" />
            <gradient
                android:startColor="@color/orange8"
                android:centerColor="@color/orange5"
                android:endColor="@color/orange8"/>
            <corners android:radius="12dp" />

        </shape>
    </item>

</selector>